{
  "name": "basic-styled-uikit",
  "version": "4.0.0",
  "description": "A set of basic react UI components built with styled-components",
  "keywords": [
    "react",
    "styled-components"
  ],
  "homepage": "https://thegrinder.github.io/basic-styled-uikit",
  "repository": {
    "type": "git",
    "url": "https://github.com/thegrinder/basic-styled-uikit.git"
  },
  "main": "./dist/index.js",
  "scripts": {
    "commit": "git-cz",
    "production": "rm -rf lib && webpack",
    "prepublishOnly": "npm run production",
    "docz:build": "docz build",
    "docz:dev": "docz dev",
    "test": "jest",
    "semantic-release": "semantic-release"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src/"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ]
  },
  "author": "Pawel Szczepkowski",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-export-default-from": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.4",
    "@babel/plugin-syntax-export-namespace-from": "^7.8.3",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@emotion/core": "^10.0.28",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.0.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@testing-library/jest-dom": "^5.11.1",
    "@testing-library/react": "^10.4.7",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-styled-components": "^1.10.7",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "docz": "^2.3.1",
    "docz-theme-default": "^1.2.0",
    "eslint": "^7.5.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.3",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "react": "^16.13.1",
    "semantic-release": "^17.1.1",
    "styled-components": "^4.2.0",
    "webpack": "4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "peerDependencies": {
    "styled-components": "^5.1.1",
    "react": "^16.13.1"
  },
  "dependencies": {
    "prop-types": "^15.7.2"
  }
}
