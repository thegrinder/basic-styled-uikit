{
  "name": "basic-styled-uikit",
  "version": "3.0.0-beta.3",
  "description": "A set of basic react UI components built with styled-components",
  "keywords": [
    "react",
    "styled-components"
  ],
  "homepage": "https://thegrinder.github.io/basic-styled-uikit",
  "repository": {
    "type": "git",
    "url": "https://github.com/thegrinder/basic-styled-uikit.git"
  },
  "main": "./dist/index.js",
  "scripts": {
    "commit": "git-cz",
    "production": "rm -rf lib && webpack",
    "prepublishOnly": "npm run production",
    "docz:build": "docz build",
    "docz:dev": "docz dev",
    "lint": "eslint './src/**/*.js' --fix",
    "test": "jest",
    "semantic-release": "semantic-release"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ]
  },
  "author": "Pawel Szczepkowski",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "@babel/plugin-syntax-export-namespace-from": "^7.2.0",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@emotion/core": "^10.0.17",
    "@semantic-release/commit-analyzer": "^6.3.0",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/npm": "^5.1.15",
    "@semantic-release/release-notes-generator": "^7.3.0",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.1.3",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "^1.10.6",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "docz": "^1.2.0",
    "docz-theme-default": "^1.2.0",
    "eslint": "^6.3.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "semantic-release": "^15.13.24",
    "styled-components": "^4.2.0",
    "webpack": "4.39.3",
    "webpack-cli": "^3.3.7",
    "webpack-dev-server": "^3.8.0"
  },
  "peerDependencies": {
    "styled-components": "^4.3.2",
    "react": "^16.9.0"
  },
  "dependencies": {
    "polished": "^3.4.1",
    "prop-types": "^15.7.2"
  }
}
