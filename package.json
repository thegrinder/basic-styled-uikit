{
  "name": "basic-styled-uikit",
  "version": "1.1.2",
  "description": "A set of basic react UI components built with styled-components",
  "keywords": [
    "react",
    "styled-components"
  ],
  "homepage": "https://thegrinder.github.io/basic-styled-uikit",
  "repository": {
    "type": "git",
    "url": "https://github.com/thegrinder/basic-styled-uikit.git"
  },
  "main": "./dist/index.js",
  "scripts": {
    "commit": "git-cz",
    "production": "rm -rf lib && webpack",
    "prepublishOnly": "npm run production",
    "docz:build": "docz build",
    "docz:dev": "docz dev",
    "docz:deploy": "docz build && gh-pages -d .docz/dist",
    "test": "jest",
    "semantic-release": "semantic-release"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "author": "Pawel Szczepkowski",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/plugin-syntax-export-namespace-from": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@emotion/core": "^10.0.7",
    "@semantic-release/git": "^7.0.8",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-styled-components": "^1.10.0",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "docz": "^0.13.7",
    "docz-theme-default": "^0.13.7",
    "dom-testing-library": "^3.16.8",
    "eslint": "^5.14.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "gh-pages": "^2.0.1",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jest-dom": "^3.1.2",
    "lint-staged": "^8.1.4",
    "react": "^16.8.3",
    "react-testing-library": "^6.0.0",
    "semantic-release": "^15.13.3",
    "styled-components": "^4.1.3",
    "webpack": "4.28.4",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.0"
  },
  "peerDependencies": {
    "styled-components": "^4.0.0",
    "react": "^16.0.0"
  },
  "dependencies": {
    "prop-types": "^15.7.2"
  }
}
